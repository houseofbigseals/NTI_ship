#include <Servo.h> //используем библиотеку для работы с сервоприводом

Servo servo; //объявляем переменную servo типа Servo
int servoPin  = 10; // задаем номер пина, к которому хотим подключить сервомотор

void setup() //процедура setup
{
  servo.attach(servoPin); //привязываем привод к порту с номером servoPin
}

void loop()
{
  servo.write(90); //останавливаем вращение мотора
  delay(2000); //ждем 2 секунды
  servo.write(180); // максимальная скорость в одну сторону
  delay(2000); //ждем 2 секунды
  servo.write(0); // максимальная скорость в противоположную сторону
  delay(2000); //ждем 2 секунды
}
