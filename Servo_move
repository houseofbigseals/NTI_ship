#include <Servo.h> //используем библиотеку для работы с сервоприводом

Servo servo1; //объявляем переменную servo1 типа Servo
Servo servo2; //объявляем переменную servo2 типа Servo
int servoPin_1 = 5;
int servoPin_2 = 6;
int v = 30; //переменная, в которой будем хранить скорость корабля

void setup()
{
  servo1.attach(servoPin_1); //привязываем привод к порту servoPin_1
  servo2.attach(servoPin_2); //привязываем привод к порту servoPin_2
}

void loop() 
{
  servo1.write(90); //останавливаем вращение мотора1
  servo2.write(90); //останавливаем вращение мотора2
  delay(2000); //ждем 2 секунды
  
  servo1.write(90 - v); //скорость v в одну сторону для первого сервомотора
  servo2.write(90 + v); //скорость -v в другую сторону для второго
  delay(2000); //ждем 2 секунды

  servo1.write(90 + v); //скорость -v в одну сторону для первого сервомотора
  servo2.write(90 - v); //скорость v в другую сторону для второго  
  delay(2000); //ждем 2 секунды
}
